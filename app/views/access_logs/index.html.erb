<%= render 'shared/header'%>
<%= render 'shared/sidebar'%>
<div class="content-wrapper">
    <section class="content-header">    
      <div class="container-fluid">
          <div class="row">
              <div class="col-sm-6">
                  <h3>Access Logs</h3>
              </div>
              <div class="col-sm-6">
                  <ol class="breadcrumb float-sm-right">
                      <li class="breadcrumb-item"><%=link_to :Dashboard, root_path%></li>
                      <li class="breadcrumb-item active">Access Logs</li>
                  </ol>
              </div>
          </div>
      </div>
    </section>
    <section class="content">
      <div class="container-fluid">
        <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-body">
                  <table class="table table-bordered">
                    <thead>
                      <th>ID</th>
                      <th>USER</th>
                      <th>GATE</th>
                      <th>NFC</th>
                      <th>PERMITTED</th>
                      <th>TIME</th>
                    </thead>
                    <tbody>
                      <% @access_logs.each do |log|%>
                        <tr>
                          <td><%=log.id%></td>
                          <td><%="#{log.user.first_name} #{log.user.last_name}"%></td>
                          <td><%=log.gate.name%></td>
                          <td><%=log.nfc.tag%></td>
                          <td><%=log.is_access%></td>
                          <td><%=log.created_at.in_time_zone('Asia/Manila')%></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
        </div>
      </div>
    </section>
</div>