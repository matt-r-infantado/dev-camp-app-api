<%= render 'shared/header'%>
<%= render 'shared/sidebar'%>
<div class="content-wrapper">
  <section class="content-header">    
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-6">
          <h3>Update User</h3>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><%=link_to :Dashboard, root_path%></li>
            <li class="breadcrumb-item active"><%=link_to :Users, users_path%></li>
            <li class="breadcrumb-item active">New</li>
          </ol>
        </div>
      </div>
    </div>
  </section>
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <%= form_tag user_path(@user), :method => :put do %>
                <div class="form-outline mb-4 col-3">
                  <label class="form-label mt-3" for="first_name">First Name</label>
                  <%=text_field_tag :first_name, @user.first_name, class:'form-control', type:'text'%>
                  <label class="form-label mt-3" for="last_name">Last Name</label>
                  <%=text_field_tag :last_name, @user.last_name, class:'form-control', type:'text'%>
                    <label class="form-label mt-3" for="email">Email</label>
                  <%=text_field_tag :email, @user.email, class:'form-control', type:'text'%>
                  <label class="form-label mt-3" for="role_id">Role</label>
                  <%# <%= select_tag(:role_id, options_for_select(Role.all.collect { |t| [t.name, t.id]}), class:"select form-control")%>
                  <%= select_tag(:role_id, options_for_select(Role.all.collect { |r| [r.name, r.id] }, @user.role_id), class:"select form-control") %>
                  <%# <%=text_field_tag :row, params[:name], class:'form-control', type:'text'%>
                  <label class="form-label mt-3" for="username">Username</label>
                  <%=text_field_tag :username, @user.username, class:'form-control', type:'text'%>
                  <label class="form-label mt-3" for="password">Disabled</label> 
                  <div class="checkbox">
                    <td>
                      <%= check_box_tag 'disabled', 1,  @user.disabled %>
                    </td>
                  </div>
                </div>
                <%= submit_tag("Update", :class=>"btn btn-primary btn-block mb-4 ml-2 col-2", :name=>"submit") %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>